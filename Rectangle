
#include <iostream>
using namespace std;

int main()
{
    int lenght, width;
    cin >> lenght >> width;

    for (int i = 0; i <= width; i++)
    {
        for (int j = 0; j <= lenght; j++)
        {
            if (i == 0 || i == width || j == 0 || j == lenght) cout << "+";
            else cout << "*";
        }
        cout << endl;
    }
    system("pause");
}
